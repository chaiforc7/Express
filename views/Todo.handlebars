<div class="container bg-info pt-3 mt-3">
    <div class="container m-auto pb-2 ">
        <h1 class="pt-4 mb-2 text-center larger">{{Title}}</h1>
        <h3 class="text-center mt-2">Set up your daily routine and tasks</h3>
    </div>

    <form action="/user/Todo" method="POST" class="container  mt-2">
        <div class="form-group">
            <label for="id">S/N</label>
            <input type="text" name="id" class="form-control " required>
        </div>
        <div class="form-group">
            <label for="name">Task</label>
            <input type="text" name="Task" class="form-control" required>
        </div>
        <div class="form-group ">
            <label for="content">Content</label>
            <input type="text" name="Content" class="form-control" required>
        </div>
        <input type="submit" value="Add Task" class="btn btn-light text-dark col-sm-2">
    </form>
    <div class="mt-2 pt-2 pb-4 mb-5">
        <h2 class="text-center mt-3 pb-3">Tasks</h2>
            <div class="list-group">  
                 {{#each data}}
               <div class="list-group-item d-flex-inline pb-2 bg-transparent">
                    <span class="d-inline-block col-sm-1 "> {{this.id}}</span>
                    <span class="d-inline-block col-sm-4"> {{this.Task}}</span>
                    <span class="d-inline-block col-sm-5"> {{this.Content}}</span>
                    <a href={{this.link}}  class="bg-primary p-1">
                        <button class="btn  col-sm-1">Delete</button>
                    </a>
                </div>
                {{/each}}
            </div>
        </div>
    
</div>
